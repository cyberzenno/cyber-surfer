@model CyberSurfer.Web.Models.SearchResultsViewModel

@{
    ViewBag.Title = "Search";
}

@* Header Part *@
<div class="row">
    <div class="col-md-6">
        <h3>@Model.Search</h3>
        <h5>@Model.TotalResults results from @Model.SearchProvider</h5>
    </div>
    <div class="col-md-6">
        @{
            Html.RenderPartial("_Actions");
        }
    </div>
</div>

<div class="row">

    <div class="col-md-3">
        @Html.DisplayFor(m => m.Column1)
    </div>
    <div class="col-md-3">
        @Html.DisplayFor(m => m.Column2)
    </div>
    <div class="col-md-3">
        @Html.DisplayFor(m => m.Column3)
    </div>
    <div class="col-md-3">
        @Html.DisplayFor(m => m.Column4)
    </div>

</div>

@* Footer Part *@
<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6">
        @{
            Html.RenderPartial("_Actions");
        }
    </div>
</div>
