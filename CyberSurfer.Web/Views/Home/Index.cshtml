@using CyberSurfer.Web.Models;
@{
    ViewBag.Title = "Index";
    var appConfig = new AppConfigurationProvider();
}

@* TODO: put style in right place *@
<style>
    body {
        background-color: rgb(17,144,197);
        background-image: url('./Content/Images/Wave.jpg');
        background-size: cover;
        background-repeat:no-repeat;
    }

    a {
        color: white;
    }

    .body-content {
        color: white;
    }
</style>

<h2>Search</h2>
@using (Html.BeginForm("Search", "Home"))
{
    <div class="row">
        <div class="col-md-6">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" title="Search" name="search">
                <div class="input-group-btn">
                    <button type="submit" class="btn btn-default" title="Search"><span class="glyphicon glyphicon-search"></span></button>
                </div>
            </div>
        </div>
    </div>
}

<hr />
<p>
    <b>Cyber Surfer</b> collects the results from Bing and presents them in one single page.<br />
    It is only a test application, without any commercial purpose or warranty of any kind.<br />
</p>
<br />
<p>
    <h4> Details</h4>
    <table>
        <tr>
            <td>Search Engine: </td>
            <td>Bing</td>
        </tr>
        <tr>
            <td>Max Results: </td>
            <td>@appConfig.MaxResults</td>
        </tr>
        <tr>
            <td>Source code: </td>
            <td><a href="https://github.com/cyberzenno/cyber-surfer">cyber-surfer on GitHub</a></td>
        </tr>
        <tr>
            <td>Cyberzenno Post: </td>
            <td><a href="https://cyberzenno.wordpress.com/2017/01/31/cyber-surfer/">Cyber Surfer</a></td>
        </tr>
    </table>
</p>


